<?xml version='1.0' encoding='utf-8'?>
<widget id="com.apppenilaian.danu" version="1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Penilaian</name>
    <description>
        Aplikasi penilaian praktik mata pelajaran produktif SMK 45 Wonosari
    </description>
    <author email="info@makruvatech.com" href="http://makruvatech.com">
        Makruvatech
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-file" source="npm" />
	<feature name="File">
		<param name="android-package" value="org.apache.cordova.file.FileUtils" />
	</feature>
    <plugin name="cordova-plugin-file-transfer" source="npm" />
	<feature name="FileTransfer">
		<param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
	</feature>
	<preference name="AndroidPersistentFileLocation" value="Internal" />
	<preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root" />
    <icon src="img/icon.png" />
	<splash src="res/screen/android/splash-port-hdpi.png" />
	<splash src="res/screen/android/splash-port-ldpi.png" platform="android" qualifier="ldpi" />
	<splash src="res/screen/android/splash-port-mdpi.png" platform="android" qualifier="mdpi" />
	<splash src="res/screen/android/splash-port-hdpi.png" platform="android" qualifier="hdpi" />
	<splash src="res/screen/android/splash-port-xhdpi.png" platform="android" qualifier="xhdpi" />
	<preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
	<platform name="winphone" />
</widget>
